<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
            <Appenders>
                        <Console name="Console" target="SYSTEM_OUT">
                                    <PatternLayout pattern="[%-5p] %d %c - %m%n" />
                        </Console>
						<File name="File" fileName="/data/mc_log/mc.log">
							<PatternLayout pattern="[%-5p] %d %c - %m%n" />
						</File>
            </Appenders>
            <Loggers>
                        <Root level="INFO">
                                    <AppenderRef ref="File" />
                        </Root>
            </Loggers>
</Configuration>